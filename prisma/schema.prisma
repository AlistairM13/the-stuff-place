model Product {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    name String @db.VarChar(255)
    description String @db.VarChar(255)
    price String @db.VarChar(255)
    sellerId String
    category String

    @@index([sellerId])
}